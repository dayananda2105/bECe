<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".loginp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="23dp"
        android:hint="Id"
        android:id="@+id/lid"
        android:textColor="@color/blue_them_color"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="23dp"
        android:hint="RId"
        android:id="@+id/lrid"
        android:textColor="@color/blue_them_color"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="23dp"
        android:hint="Name"
        android:id="@+id/lnam"
        android:textColor="@color/blue_them_color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/op1"
        android:hint="op"
        android:textSize="27dp"
        android:textColor="@color/blue_them_color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/op2"
        android:textSize="27dp"
        android:textColor="@color/blue_them_color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/op3"
        android:textSize="27dp"
        android:textColor="@color/blue_them_color"/>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
   <LinearLayout
       android:id="@+id/lin12"
       android:orientation="vertical"
       android:layout_width="wrap_content"
       android:layout_height="200dp">
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/year1"
        android:background="@color/white"
        android:hint="1st year"
        android:textSize="27dp"
        android:textColorHint="@color/blue_them_color"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/year2"
        android:background="@color/white"
        android:hint="2nd year"
        android:textSize="27dp"
        android:textColorHint="@color/blue_them_color"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/year3"
        android:background="@color/white"
        android:hint="3rd year"
        android:textSize="27dp"
        android:textColorHint="@color/blue_them_color"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/year4"
        android:background="@color/white"
        android:hint="4th year"
        android:textSize="27dp"
        android:textColorHint="@color/blue_them_color"/>
   </LinearLayout>
       <LinearLayout
           android:orientation="vertical"
           android:layout_toRightOf="@id/lin12"
           android:layout_width="wrap_content"
           android:layout_height="200dp">
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/sec1"
        android:background="@color/white"
        android:hint="Sec A"
        android:textSize="27dp"
        android:textColorHint="@color/blue_them_color"
        android:visibility="gone"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/sec2"
        android:background="@color/white"
        android:hint="Sec B"
        android:textSize="27dp"
        android:visibility="gone"
        android:textColorHint="@color/blue_them_color"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/sec3"
        android:background="@color/white"
        android:hint="Sec C"
        android:textSize="27dp"
        android:visibility="gone"
        android:textColorHint="@color/blue_them_color"/>
       </LinearLayout>
   </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Login"
        android:textColorHint="@color/white"
        android:textSize="23dp"
        android:id="@+id/login"
        android:background="@color/blue_them_color"/>

</LinearLayout>